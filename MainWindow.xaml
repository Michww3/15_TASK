<Window x:Class="_15_TASK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_15_TASK"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="stateTrack" Margin="0,67,0,0" TextWrapping="Wrap" Text="Connect to DB to track connection state" VerticalAlignment="Top" Width="502" TextAlignment ="Center"  Height="110" FontSize="20" HorizontalAlignment="Center" />
        <Button x:Name="Connection_Button" Content="Connect to DB" HorizontalAlignment="Left" Margin="121,274,0,0" VerticalAlignment="Top" Height="78" Width="156" Click="Connection_Button_Click"/>
        <Button x:Name="Disconnet_Button" Content="Disconnect from DB" HorizontalAlignment="Left" Margin="510,274,0,0" VerticalAlignment="Top" Height="78" Width="156" Click="Disconnet_Button_Click"/>

    </Grid>
</Window>
